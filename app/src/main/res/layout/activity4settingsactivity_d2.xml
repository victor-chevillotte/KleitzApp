<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Attention ne pas modifier les paramÃ¨tres sans l'aide d'un conseiller !" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Power" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/idE27SettingsActivityD2_Power_etShow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_weight="1000"
                android:ems="2"
                android:inputType="number"
                android:text=""></EditText>

            <Button
                android:id="@+id/idE27SettingsActivityD2_Power_btnRead"
                style="@style/AppClickableHightStyle"
                android:layout_width="wrap_content"
                android:text="@string/Read" />

            <Button
                android:id="@+id/idE27SettingsActivityD2_Power_btnSet"
                style="@style/AppClickableHightStyle"
                android:layout_width="wrap_content"
                android:text="@string/Set" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idE27SettingsActivityD2_Temporary_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Temporary_colon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idE27SettingsActivityD2_Temporary_tvShow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_weight="1000"
                android:text=""></TextView>

            <Button
                android:id="@+id/idE27SettingsActivityD2_Temporary_btnRead"
                style="@style/AppClickableHightStyle"
                android:layout_width="wrap_content"
                android:text="@string/Read" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/Profile_colon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/idE27SettingsActivityD2_Profile_SpProfiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/linkProfiles" />

        <Button
            android:id="@+id/idE27SettingsActivityD2_Profile_btnRead"
            style="@style/AppClickableHightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Read" />

        <Button
            android:id="@+id/idE27SettingsActivityD2_Profile_btnSet"
            style="@style/AppClickableHightStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Set" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/FrequencyRegion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_frequency_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/RegionArrays" />

        <Spinner
            android:id="@+id/sp_frequency_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/sp_frequency_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_region_read"
            style="@style/AppClickableHightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Read" />

        <Button
            android:id="@+id/btn_region_set"
            style="@style/AppClickableHightStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Set" />

    </LinearLayout>

</LinearLayout>